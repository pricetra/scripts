{
  "compilerOptions": {
    "target": "ES2020", // modern JS output
    "module": "CommonJS", // Node.js style modules
    "rootDir": "./", // source root
    "outDir": "./dist", // compiled output folder
    "strict": true, // enable all strict type-checking
    "esModuleInterop": true, // allow default imports from CommonJS
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true, // skip type checks of .d.ts files
    "resolveJsonModule": true
  },
  "include": ["*.ts"],
  "exclude": ["node_modules", "dist"]
}
